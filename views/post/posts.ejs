<%- include('../_partial/_header'); -%>


<div class="row">
    <div class="col-md-6">
        <h1>My Posts</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-6" style="margin-bottom:10px;">
        <a href="/posts/add" type="button" class="btn btn-default">New Post</a>
    </div>
</div>

<!--List all the posts-->
<% posts.forEach(function(post) { %>
    <div class="col-sm-4 col-md-4">
        <div class="thumbnail">
            <div class="caption">
                <h3><%= post.title %></h3>
                <p><%= post.content %></p>
                <p><a href="posts/<%= post._id %>" class="btn btn-primary" role="button">Read</a> <a href="posts/edit/<%= post._id %>" class="btn btn-default"
                        role="button">Edit</a></p>
            </div>
        </div>
    </div>

<% }) %>




<%- include ('../_partial/_footer'); -%>